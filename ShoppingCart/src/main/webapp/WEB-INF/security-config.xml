<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
       http://www.springframework.org/schema/security 
       http://www.springframework.org/schema/security/spring-security-4.0.xsd">


	<security:http auto-config="true" use-expressions="true">

		<!-- http://locahost:8080/ShoppingCart/intercept_url -->


		<!-- intercept url starting -->


	<!-- 	<security:intercept-url access="hasRole('ROLE_ADMIN')"
			pattern="/manage**" />

		<security:intercept-url access="hasRole('ROLE_USER')"
			pattern="/myCart/**" />

		<security:intercept-url access="hasRole('ROLE_USER')"
			pattern="/cart_checkout**" /> -->

		<!-- intercept url Ending -->


	<!-- 	<security:access-denied-handler
			error-page="/accessDenied" />

		<security:csrf /> -->

		<!-- <security:logout logout-url="/logout" /> -->


		<!-- login is name of your login page -->


		<!-- j_spring_security_check should same as in the login.jsp <form action="/j_spring_security_check" -->


		<!-- <security:form-login login-page="/login" -->


		<security:form-login  
        	
        	login-processing-url="/signIn"
        	default-target-url="/afterlogin"
        	authentication-failure-url="/LoginPage?error"
            username-parameter="email"
            password-parameter="user_password" />
	<security:logout
            logout-success-url="/LoginPage?logout" logout-url="/logout" />
            <security:csrf disabled="true"/>
	</security:http>


	<security:authentication-manager>


		<security:authentication-provider>

			<security:jdbc-user-service
				authorities-by-username-query="select email, role from Role where email=?"
				users-by-username-query="select email, user_password, enabled from User where email=?"
				data-source-ref="dataSource" />

		</security:authentication-provider>

	</security:authentication-manager>

</beans>